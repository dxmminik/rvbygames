<div class="card">
  <div class="card-header">
    <h2>Edytuj profil</h2>
  </div>
  <div class="card-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "Nazwa" %>
        <%= f.text_field :name, class: "form-control", autofocus: true %>
      </div>

  <div class="form-group">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Hasło" %> <i>(pozostaw to pole puste, jeśli nie chcesz zmieniać)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Conajmniej <%= @minimum_password_length %> znaków</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Potwierdź hasło" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Obecne hasło" %> <i>(jest potrzebne by zapisać zmiany)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
  </div>

    <% end %>
  </div>
  <div class="card-footer">
      <%= button_to "Usuń moje konto", registration_path(resource_name), data: { confirm: "Czy jesteś pewny?" }, method: :delete %>
  </div>
</div>