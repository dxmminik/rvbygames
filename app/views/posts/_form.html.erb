<%= form_with(model: post, local: true, multipart: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <h4><%= form.label :title, "Tytuł ogłoszenia" %></h4>
    <%= form.text_field :title, class: "form-control", placeholder: "Tytuł twojej gry" %>
  </div>

  <div class="form-group">
    <h4><%= form.label :description, "Opis" %></h4>
    <%= form.text_area :description, class: "form-control", style: "height:200px", placeholder: "Parę słów na temat tytułu" %>
  </div>

  <div class="form-group">
    <h4><%= form.label :state, "Stan" %></h4>
    <%= form.text_field :state, class: "form-control", style: "height:43px", placeholder: "Od Uszkodzony do Idealny" %>
  </div>

  <div class="form-group">
    <h4><%= form.label :price, "Cena" %></h4>
    <%= form.text_field :price, class: "form-control", style: "height:43px", value: "zł" %>
    <br>
  </div>

  <div class="form-group">
    <h4><%= form.label :image, "Zdjęcie" %></h4>
    <%= form.file_field :image, class: "form-control", style: "height:43px" %>
  </div>
<br />
  <div class="actions">
    <%= form.submit "Utwórz", class: "btn btn-success", style: "width:100px" %>
  </div>
<% end %>
