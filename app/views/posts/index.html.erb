<div class="card">
  <div class="card-header"><h2>Dostępne ogłoszenia</h2></div>
  <div class="card-body">
    <% @posts.each do |post| %>

    <div class="card" style="width: 18rem;">
      <%= image_tag post.image.url(:medium) %>
      <div class="card-body">
       <h5> <%= link_to post.description, post %> </h5> <br>
        <% if post.user == current_user %>
          <%= link_to 'Edytuj', edit_post_path(post) %>
          <%= link_to 'Usuń', post, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %>
          <% end %>
      </div>
    </div>

    <% end %>
  </div>
  <div class="card-footer"><%= link_to 'Nowe ogłoszenie', new_post_path %></div>
</div>