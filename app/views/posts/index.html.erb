<div class="card">
  <div class="card-header"><h2>Dostępne ogłoszenia</h2></div>
  <div class="card-body">

<table>
  <thead>
    <tr>
      <th>Obraz</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image.url(:medium) %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Pokaż', post %></td>
        <% if post.user == current_user %>
        <td><%= link_to 'Edytuj', edit_post_path(post) %></td>
        <td><%= link_to 'Usuń', post, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  </div>
  <div class="card-footer"><%= link_to 'Nowe ogłoszenie', new_post_path %></div>
</div>